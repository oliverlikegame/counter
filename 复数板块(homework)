#include<iostream>//虚数共用体  两虚数乘积
using namespace std;
struct xushu//a+b*i
{
	double re;//a
	double im;//b
};
int main()
{
	int panduan,e1,f1,e2,f2;
	struct xushu x,y,s;
	cout<<"复数加法按1"<<endl;
	cout<<"复数乘法按2"<<endl;
	cout<<"复数减法按3"<<endl;
	cout<<"复数除法按4"<<endl;
	cin>>panduan;
	if( panduan==1)
	{
		cout<<"现在是加法"<<endl;
		cout<<"依次输入两组虚数a+bi,c+d*i中的a,b,c,d以空格隔开"<<endl;
		cin>>x.re>>x.im>>y.re>>y.im;
		s.im=x.im+y.im;//(a+bi)+(c+di)==(a+c)+(b+d)i  x+y==s 定义虚数加法
		s.re=x.re+y.re;
		cout<<x.re<<"+"<<x.im<<"*i+"<<y.re<<"+"<<y.im<<"*i=="<<s.re<<"+"<<s.im<<"*i";
	}
	else if( panduan==2)
	{
		cout<<"现在是乘法"<<endl;
		cout<<"依次输入两组虚数a+bi,c+d*i中的a,b,c,d以空格隔开"<<endl;
		cin>>x.re>>x.im>>y.re>>y.im;
		s.im=x.re*y.im+x.im*y.re;//(a+bi)*(c+di)==ac-bd+(ad+bc)*i   x*y==s 定义虚数乘法
		s.im=x.re*y.re-x.im*y.im;
		cout<<"("<<x.re<<"+"<<x.im<<")*i+("<<y.re<<"+"<<y.im<<")=="<<s.re<<"+"<<s.im<<"*i";
	}
	else if(panduan==3)
	{
		cout<<"现在是减法";
		cout<<"依次输入两组虚数a+bi,c+d*i中的a,b,c,d以空格隔开"<<endl;
		cin>>x.re>>x.im>>y.re>>y.im;
		s.im=x.im-y.im;//(a+bi)-(c+di)==(a-c)+(b-d)i  x-y==s 定义虚数加法
		s.re=x.re-y.re;
		cout<<x.re<<"+"<<x.im<<"*i-（"<<y.re<<"+"<<y.im<<")=="<<s.re<<"+"<<s.im<<"*i";
	}
	else if(panduan==4)
	{
		cout<<"现在是除法"<<endl;
		cout<<"依次输入两组虚数a+bi,c+d*i中的a,b,c,d以空格隔开"<<endl;//(a+bi)/(c+di)=(ac+bd)/(c*c+d*d) +((bc-ad)/(c*c+d*d))i
		cin>>x.re>>x.im>>y.re>>y.im;
		e1=((x.re*y.re)+(x.im*y.im));//s的a=e1/f1
		f1=(y.im*y.im+y.re*y.re);
		e2=(x.im*y.re)-(x.re*y.im);//s的b==e/f
		f2=(y.im*y.im+y.re*y.re);
		cout<<"("<<x.re<<"+"<<x.im<<"*i)/（"<<y.re<<"+"<<y.im<<"*i)=="<<"("<<e1<<"/"<<f1<<")+"<<"("<<e2<<"/"<<f2<<")"<<"*i";
		

	
	}
}

